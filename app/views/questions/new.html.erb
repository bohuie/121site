<%= simple_form_for @question, :url => { :action => "create" } do |f| %>
  <p>All multiple choice questions must have one question and 5 possible responses. If you include Java code in your question, use the "Courier New" font to make it clear that it is code.</p>
    <div class = "col-sm-4">
      <%= f.input :course_id, :required => true, collection: @courses %>
      <%= f.input :topic_id, :label => "Select a Topic", :required => true,collection: @topics %>
    </div>
  <div class = "row">
    <div class = "col-sm-12">
      <%= f.input :qtext, :label => "Question", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12">
      <%= f.input :a1text, :label => "a)", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12">
      <%= f.input :a2text, :label => "b)", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12">
      <%= f.input :a3text, :label => "c)", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12">
      <%= f.input :a4text, :label => "d)", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
     <div class = "col-sm-12">
      <%= f.input :a5text, :label => "e)", :required => false, :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-3">
      <%= f.input :answer, :label => "Select the Correct Answer", :required => false, collection: @answer %>
    </div>
  </div>
  <br/>
  <%= f.submit "Create without submitting", name: "submitted", value: "Create without submitting", class: "btn btn-medium btn-info" %>
  <%= f.submit "Submit", name: "submitted", value: "Submit", class: "btn btn-medium btn-success" %>
<% end %>

