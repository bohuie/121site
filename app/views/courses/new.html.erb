<h1>Create New Course</h1>
<div class="row">
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
	<div class="col-xs-8 col-sm-6 col-md-4">
		<%= simple_form_for @course do |f| %>
			<div class="row">
				<%= f.input :title, placeholder: "Please input course name:" %>
			</div>
			<div class="row">
				<%= f.input :subject, placeholder: "Enter course code (ex Cosc 111):" %>
			</div>
			<div class="row">
				<%= f.input :year, placeholder: "Enter year:" %>
			</div>
			<div class="row">
				<%= f.submit "Create Course", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
</div>