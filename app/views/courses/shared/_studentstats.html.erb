<div class = "row" style = "padding: 5px; margin-bottom: 5px;">	
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> Average in Course </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.name %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<% unless @course.students.count == 0 %>
			<p> <%= studentstats.practices.count/@course.students.count %> </p>
		<% else %>
			<p> ~ N/A ~ </p>
		<% end %>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<% unless @course.students.count == 0 %>
			<p> <%= studentstats.practices.where(correct: true).count/@course.students.count %> </p>
		<% else %>
			<p> ~ N/A ~ </p>
		<% end %>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<% if !(studentstats.practices.count == 0) %>
			<p> <%= (studentstats.practices.where(correct: true).count*100/studentstats.practices.count*100)/100 %> %</p>
		<% else %>
			<p> ~ N/A ~ </p>
		<% end %>
	</div>
	<div class="col-md-2"></div>
</div>
<div class = "row" style = "padding: 5px; margin-bottom: 5px;">	
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> My Results </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.name %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.practices.where(user_id: @user.user_id).count %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.practices.where(user_id: @user.user_id, correct: true).count %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<% if !(studentstats.practices.where(user_id: @user.user_id).count == 0) %>
			<p> <%= (studentstats.practices.where(user_id: @user.user_id, correct: true).count*100/studentstats.practices.where(user_id: @user.user_id).count*100)/100 %> %</p>
		<% else %>
			<p> ~ N/A ~ </p>
		<% end %>
	</div>
	<div class="col-md-2"></div>
</div>