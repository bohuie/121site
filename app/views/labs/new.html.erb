<h1>Create New Lab</h1>
<div class="row">
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
	<div class="col-xs-8 col-sm-6 col-md-4">
		<%= simple_form_for @lab do |f| %>
			<div class="row">
				<%= f.input :name, placeholder: "Please lab name (ex L01):" %>
			</div>
			<%= f.input :course_id, as: :hidden, input_html: { value: params[:course_id]} %>
			<div class="row">
				<%= f.submit "Create Lab", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
</div>