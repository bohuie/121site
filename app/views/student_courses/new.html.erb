<h1>Registering into a Course</h1>
<div class="row">
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
	<div class="col-xs-8 col-sm-6 col-md-4">
		<%= simple_form_for @student_course do |f| %>
			<div class="row">
				<%= f.input :course_id, placeholder: "Please select a course:", collection: @courses %>
			</div>
			<%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
			<div class="row">
				<%= f.submit "Register", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
	<div class="col-xs-2 col-sm-3 col-md-4"></div>
</div>
