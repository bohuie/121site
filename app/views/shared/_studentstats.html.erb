<% studentstats.topics.each do |topic| %>
	<div class = "row is-table-row" style = "padding: 5px; margin-bottom: 5px;">	
		<div class = "col-md-2" style = "border-bottom: 1px solid black;">
			<p> <%= studentstats.title %> - <%= studentstats.year %></p>
		</div>
		<div class = "col-md-2" style = "border-bottom: 1px solid black;">
			<p> <%= topic.name %> </p>
		</div>
		<div class = "col-md-2" style = "border-bottom: 1px solid black;">
			<p> <%= Practice.where(user_id: @user.user_id, topic_id: topic.id).count %> </p>
		</div>
		<div class = "col-md-2" style = "border-bottom: 1px solid black;">
			<p> <%= Practice.where(user_id: @user.user_id, correct: true, topic_id: topic.id).count %> </p>
		</div>
		<div class = "col-md-2" style = "border-bottom: 1px solid black;">
			<% if !(Practice.where(user_id: @user.user_id, topic_id: topic.id).count == 0) %>
				<p> <%= (Practice.where(user_id: @user.user_id, correct: true, topic_id: topic.id).count*100/Practice.where(topic_id: topic.id, user_id: @user.user_id).count*100)/100 %> %</p>
			<% else %>
				<p> ~ N/A ~ </p>
			<% end %>
		</div>
		<div class="col-md-2"></div>
	</div>
<% end %>