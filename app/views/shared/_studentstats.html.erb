
<div class = "row" style = "padding: 5px; margin-bottom: 5px;">	
	<div class = "col-md-3" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.title %> - <%= studentstats.year %></p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.practices.where(user_id: @user.id).count %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<p> <%= studentstats.practices.where(correct: true, user_id: @user.id).count %> </p>
	</div>
	<div class = "col-md-2" style = "border-bottom: 1px solid black;">
		<% if !(studentstats.practices.where(user_id: @user.id).count == 0) %>
			<p> <%= (studentstats.practices.where(correct: true, user_id: @user.id).count*100/studentstats.practices.where(user_id: @user.id).count*100)/100 %> %</p>
		<% else %>
			<p>N/A</p>
		<% end %>
	</div>
</div>
