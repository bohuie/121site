<tr>
	<% if flagquestions.exam == false %>
			<td class = "col-md-2">
				<p><%= flagquestions.user.lname %>, <%= flagquestions.user.fname %></p>
			</td>
			<td class = "col-md-1">
				<% if !flagquestions.user.has_role?(:instructor) %>
					<p><%= flagquestions.user.studentnumber %></p>
				<% end %>
			</td>
			<td class = "col-md-1">
				<% if flagquestions.course_created_in %>
					<%= flagquestions.course_created_in.title %> - <%=flagquestions.course_created_in.year %>
				<% else %>
					N/A
				<% end %>
			</td>
			<td class = "col-md-1">
				<%= flagquestions.lab ? flagquestions.lab.name : "N/A" %>
			</td>
			<td class = "col-md-1">
				<%= Topic.find_by(:topic_id => flagquestions.topic_id).name %>
			</td>
			<td class = "col-md-2">
				<% if flagquestions.date_submitted.nil? %>
					<% flagquestions.date_submitted = (DateTime.now.to_time - 8.hours).to_datetime %>
					<% flagquestions.save %>
				<% end %>
				<%= flagquestions.date_submitted.strftime("%a %b %-d at %I:%M%p") %>
			</td>
			<td class = "col-md-1">
				<%= link_to "View", {controller: "questions", action: "flagview", id: flagquestions.id}, class: "btn btn-mdall btn-success" %>
			</td>
			<td class="col-md-1"></td>
			<td class = "col-md-1">
				<%=flagquestions.grade.html_safe %>
			</td>
	<% else %>
			<td class = "col-md-2">
				<p><%= flagquestions.user.lname %>, <%= flagquestions.user.fname %></p>
			</td>
			<td class = "col-md-1">
				<% if !flagquestions.user.has_role?(:instructor) %>
					<p><%= flagquestions.user.studentnumber %></p>
				<% end %>
			</td>
			<td class = "col-md-1">
				<% if flagquestions.course_created_in %>
					<%= flagquestions.course_created_in.title %> - <%=flagquestions.course_created_in.year %>
				<% else %>
					N/A
				<% end %>
			</td>
			<td class = "col-md-1">
				<%= flagquestions.lab ? flagquestions.lab.name : "N/A" %>
			</td>
			<td class = "col-md-1">
				<%= Topic.find_by(:topic_id => flagquestions.topic_id).name %>
			</td>
			<td class = "col-md-2">
				<% if flagquestions.date_submitted.nil? %>
					<% flagquestions.date_submitted = (DateTime.now.to_time - 8.hours).to_datetime %>
					<% flagquestions.save %>
				<% end %>
				<%= flagquestions.date_submitted.strftime("%a %b %-d at %I:%M%p") %>
			</td>
			<td class = "col-md-1">
				<%= link_to "View", {controller: "questions", action: "flagview", id: flagquestions.id}, class: "btn btn-mdall btn-info" %>
			</td>
			<td class = "col-md-1">
				Flagged
			</td>
			<td class = "col-md-1">
				<%=flagquestions.grade.html_safe %>
			</td>
	<% end %>
</tr>