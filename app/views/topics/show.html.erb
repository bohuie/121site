
<div class="row">
  <%= simple_form_for @ct, :url => { :action => "create" } do |f| %>
    <div class = "col-md-6">
      <%= f.input :course_id, :required => true, collection: @courses %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12" id="class_topics">
  </div>
</div>
<hr>
<%= simple_form_for @topic, :url => { :action => "create" } do |f| %>
  <div class = "row">
    <div class = "col-sm-6">
      <%= f.label "Topic Name" %>
      <%= f.text_field :name%>
    </div>
  </div>
   <%= f.submit "Create Topic", class: "btn btn-medium btn-success" %>
<% end %>
<% if @topics.any? %>
	<div class="row", style = "border-bottom: 3px solid black;">
  		  <h3 style = "margin: 5px;"> All Topics </h3>
   	</div>
	<%= render partial: 'shared/topics', collection: @topics %>
<% end %>